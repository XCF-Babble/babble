{
  "manifest_version": 2,
  "name": "Babble",
  "version": "0.1",
  "description": "说都不会话了。",
  "icons": {
    "128": "images/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "dist/js/content.js",
        "dist/js/elementpicker.js",
        "dist/js/parse.js",
        "dist/js/message.js",
        "dist/js/vendor.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "dist/html/ui.html"
  },
  "options_ui": {
    "page": "dist/html/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "tabs",
    "unlimitedStorage",
    "<all_urls>"
  ]
}
