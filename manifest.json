{
  "manifest_version": 2,
  "name": "Babble",
  "version": "0.1",
  "description": "说都不会话了。",
  "icons": {
    "128": "images/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "dist/js/content.js",
        "dist/js/cryptoutils.js",
        "dist/js/events.js",
        "dist/js/parse.js",
        "dist/js/vendor.js"
      ]
    }
  ],
  "background": {
    "scripts": ["dist/js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "dist/html/ui.html"
  },
  "permissions": [
    "contextMenus",
    "debugger",
    "storage",
    "tabs",
    "unlimitedStorage",
    "<all_urls>"
  ]
}
